<!--pages/index2/heartRecDetail/heartRecDetail.wxml-->
<view class="page">
  <view class = "topcontainer">
    <view class='.case_title1' bindtap="cancel">
      取消
    </view>
    <view class='.case_title2' bindtap="save">
      保存
    </view>
  </view>
  <view class = "reccontainer1">
    <view class = "reccontainer2">
     <view class = "year in_mid">{{cur_year}}年</view>
     <view class = "monthDate in_mid">{{cur_month_date}}</view>
    </view>
    <view class = "reccontainer3 in_mid">{{cur_question}}</view>
  </view>
  <view class = "reccontainer4">
    <textarea class = "answer" value = "{{cur_answer}}" maxlength = "-1" auto-focus bindinput="bindInput" placeholder="请输入此刻所思所想..." placeholder-style="color: #ff9933; font-weight: bold; font-size: 35rpx"></textarea>
    <view class = "upLoad">
     <view class = "upLoadButton in_mid">
      <image class = "imageButton" src="/pages/index2/logo/添加.png" bindtap="selectpic"></image>
     </view>
     <scroll-view class = "imageList" scroll-x="true" style="white-space: nowrap;">
      <block wx:for="{{imageList}}" wx:key="*this">
        <view class="image-container">
         <image src="{{item}}" style="width: 100%; height: 100%; "></image>
         <view class="delete-icon" bindtap="deleteImage" data-index="{{index}}">——</view>
        </view>
      </block>
     </scroll-view>
    </view>
  </view>
</view>