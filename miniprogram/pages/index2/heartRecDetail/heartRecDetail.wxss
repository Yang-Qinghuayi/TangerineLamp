/* pages/index2/heartRecDetail/heartRecDetail.wxss */
/* 最大页面的底色 */
.page {
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}
.question {
  margin: 0rpx 14rpx 30rpx 14rpx;
  background: #e6edfd;
  padding: 40rpx 20rpx 30rpx 40rpx;
  /* 字体颜色 */
  color: #b8974a;
  /* 字体间距 */
  letter-spacing: 4rpx;
  /* 行间距 */
  line-height: 50rpx;
  /* 字体大小 */
  font-size: 38rpx;
  /* font-weight: 550; */
  /* 字体 */
  font-family: "楷体";
  border-radius: 18rpx;
}
.topcontainer {
  width: 100%;
  background-color: #ffffff;
  border-radius: 2%;
  display: flex;
  margin-bottom: 7%;
  flex-direction: row;
}
/*取消*/
.case_title1 {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
  height: 100%;
  background-color: #fff3eb;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 16rpx;
  color: #ff9933;
  font-size: 50rpx;
  font-weight: bold;
  padding: 10rpx;
}
/*保存*/
.case_title2 {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
  height: 100%;
  background-color: #fff3eb;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 16rpx;
  color: #ff9933;
  font-size: 50rpx;
  font-weight: bold;
  margin-left: 50%;
  padding: 10rpx;
}
.reccontainer1 {
  width: 100%;
  height: 200rpx;
  background-color: #ff9933;
  display: flex;
  flex-direction: row;
  margin-bottom: 7%;
}
.reccontainer2 {
  height: 100rpx;
  background-color: #ffffff;
  color: #ff9933;
  font-size: 50rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
}
.reccontainer3 {
  width: 75%;
  height: 100%;
  background-color: #ffffff;
  overflow-y: auto;
  box-sizing: border-box; /* 这将不会增加额外的高度 */
  padding-top: 25px;
  color: #ff9933;
  font-size: 45rpx;
  font-weight: bold;
}
.reccontainer4 {
  width: 100%;
  height: 900rpx;
  background-color: #000000;
  display: flex;
  flex-direction: column;
}
.in_mid {
  display: flex;
  justify-content: center;
  align-items: center;
}
.year {
  width: 100%;
  height: 50%;
}
.month {
  width: 100%;
  height: 50%;
}
.answer {
  padding: 10rpx;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  overflow-y: auto;
  /* color: #ff9933; */
  font-size: 50rpx;
  /* font-weight: bold; */
  font-family: "楷体";
}
.upLoad {
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: row;
}
.upLoadButton {
  width: 25%;
  height: 100%;
  background-color: #ffffff;
}
.imageButton {
  width: 70%;
  height: 70%;
}
.imageList {
  width: 75%;
  height: 100%;
  background-color: #ffffff;
}
.image-container {
  position: relative;
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
}
.delete-icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 30rpx;
  height: 30rpx;
  background-color: red; /* 也可以考虑用一个删除图标 */
  color: white;
  text-align: center;
  line-height: 26rpx;
  border-radius: 50%;
  cursor: pointer;
}
/* 自定义弹窗样式 */
.custom-toast {
  background-color: green; /* 设置为绿色背景 */
  color: #ff9933;
  font-size: 40rpx;
  font-weight: bold;
  padding: 10px;
  position: fixed;
  bottom: 100px;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 5px;
}
