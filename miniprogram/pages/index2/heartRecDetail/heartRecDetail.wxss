/* 最大页面的底色 */
.page{
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}
.topcontainer{
  width:100%;
  background-color:#ffffff;
  border-radius: 2%;
  display: flex;
  margin-bottom: 7%;
  flex-direction: row;
}
/*取消*/
.case_title1{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
  height: 100%;
  background-color: #fff3eb;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 30rpx;
  color: #ff9933;
  font-size: 60rpx;
  font-weight: bold;
}
/*保存*/
.case_title2{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
  height: 100%;
  background-color: #fff3eb;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 30rpx;
  color: #ff9933;
  font-size: 60rpx;
  font-weight: bold;
  margin-left: 50%;
}
.reccontainer1{
  width: 100%;
  height: 200rpx;
  background-color: #ff9933;
  display: flex;
  flex-direction: row;
  margin-bottom: 7%;
}
.reccontainer2{
  width: 30%;
  height: 100%;
  background-color: #ffffff;
  color: #ff9933;
  font-size: 50rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
}
.reccontainer3{
  width: 75%;
  height: 100%;
  background-color: #ffffff;
  overflow-y: auto;
  box-sizing: border-box;/* 这将不会增加额外的高度 */
  padding-top: 25px;
  color: #ff9933;
  font-size: 40rpx;
}
.reccontainer4{
  width: 100%;
  height: 900rpx;
  background-color: #000000;
  display: flex;
  flex-direction: column;
}
.in_mid{
  display: flex;
  justify-content: center;
  align-items: center;
}
.year{
  width: 100%;
  height: 50%;
}
.month{
  width: 100%;
  height: 50%;
}
.answer{
  width: 100%;
  height: 80%;
  background-color: #ffffff;
  overflow-y: auto;
  color: #ff9933;
  font-size: 40rpx;
  font-weight: bold;
}
