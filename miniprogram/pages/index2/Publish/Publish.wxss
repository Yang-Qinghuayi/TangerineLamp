/* pages/index2/Publish/Publish.wxss */
/* 最大页面的底色 */
.page {
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}
.topcontainer {
  width: 100%;
  background-color: #ffffff;
  border-radius: 2%;
  display: flex;
  margin-bottom: 7%;
  flex-direction: row;
}
/*取消*/
.case_title1 {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
  height: 100%;
  background-color: #fff3eb;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 16rpx;
  color: #ff9933;
  font-size: 50rpx;
  font-weight: bold;
  padding: 10rpx;
}
/*发布*/
.case_title2 {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
  height: 100%;
  background-color: #fff3eb;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 16rpx;
  color: #ff9933;
  font-size: 50rpx;
  font-weight: bold;
  margin-left: 50%;
  padding: 10rpx;
}
.contentContainer {
  width: 100%;
  height: 900rpx;
  background-color: #000000;
  display: flex;
  flex-direction: column;
}
.answer {
  padding: 10rpx;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  overflow-y: auto;
  /* color: #ff9933; */
  font-size: 50rpx;
  /* font-weight: bold; */
  font-family: "楷体";
}
.upLoad {
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: row;
}
.upLoadButton {
  width: 25%;
  height: 100%;
  background-color: #ffffff;
}
.in_mid {
  display: flex;
  justify-content: center;
  align-items: center;
}
.imageButton {
  width: 70%;
  height: 70%;
}
.imageList {
  width: 75%;
  height: 100%;
  background-color: #ffffff;
}
.image-container {
  position: relative;
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
}
.delete-icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 30rpx;
  height: 30rpx;
  background-color: red; /* 也可以考虑用一个删除图标 */
  color: white;
  text-align: center;
  line-height: 26rpx;
  border-radius: 50%;
  cursor: pointer;
}
/* 自定义弹窗样式 */
.custom-toast1 {
  background-color: green; /* 设置为绿色背景 */
  color: #ff9933;
  font-size: 40rpx;
  font-weight: bold;
  padding: 10px;
  position: fixed;
  bottom: 100px;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 5px;
}
.custom-toast2 {
  background-color: red; /* 设置为绿色背景 */
  color: #ff9933;
  font-size: 40rpx;
  font-weight: bold;
  padding: 10px;
  position: fixed;
  bottom: 100px;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 5px;
}
.checkboxContainer{
  display: flex;
  flex-direction: row; /* 横向排列 */
}
.style{
  font-size: 35rpx;
  font-weight: bold;
  color:#ff9933
}
.align{
  margin-left: 75rpx;
}