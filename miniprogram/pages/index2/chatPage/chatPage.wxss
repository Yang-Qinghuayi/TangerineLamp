/* pages/chatManager/chatManager.wxss */
@import "../../../colorui/main.wxss";
@import "../../../colorui/icon.wxss";

.header {
  height: 40px;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 15px;
  font-weight: 400;
}

.bg-mygreen {
  background-color: rgb(146, 241, 109);
}

.mytext {
  font-size: 17px;
  letter-spacing: 1px;
}

.item-padding {
  padding: 15px 30px 15px;
}

.fileName {
  width: 150px;
  max-width: 200px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.solid-bottom {
  margin-top: 1vh;
  height: 7vh;
  width: 60vw;
  background-color: whitesmoke;
  border-radius: 10rpx;
}

.button {
  margin-top: 2vh;
}

.middle-view {
  width: 100%;
  margin: 0 20rpx;
  border: 1px solid rgb(158, 158, 158);
  padding: 15rpx;
  border-radius: 10rpx;
  text-align: center;
  background-color: #fff;
}

.voice-tip {
  position: fixed;
  width: 310rpx;
  height: 280rpx;
  left: 50%;
  margin-left: -150rpx;
  top: 40%;
  margin-top: -150rpx;
  background-color: #555151;
  color: #fff;
  text-align: center;
  padding: 20rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
}

.voice-tip image {
  width: 200rpx;
  height: 180rpx;
}