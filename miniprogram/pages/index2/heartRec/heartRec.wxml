<!--pages/index2/heartRec.wxml-->
<view class="page">
  <view class="topcontainer">
    <view class='.case_title'>
      心灵日记
    </view>
  </view>
  <view class = "reccontainer">
    <view class = "reccontainer1">
      <view class = "yearDay in_mid">
        <view class = "year in_mid">{{cur_year}}年</view>
        <view class = "day in_mid">{{cur_date}}日</view>
      </view>
      <view class = "reccontainer2 in_mid">{{cur_question}}</view>
    </view>
    <scroll-view scroll-y="true" class = "reccontainer3 im_mid">
      <view class = "reccontainer4" data-month = "1" bindtap="gotoHeartrecDetail">
        <view class = "month in_mid">1月</view>
        <view class = "answer in_mid">暂无回答{{cur_question}}</view>
      </view>
      <view class = "reccontainer4" data-month = "2" bindtap="gotoHeartrecDetail">
        <view class = "month in_mid">2月</view>
        <view class = "answer in_mid">图片{{cur_question}}</view>
      </view>
      <view class = "reccontainer4" data-month = "3" bindtap="gotoHeartrecDetail">
        <view class = "month in_mid">3月</view>
        <view class = "answer in_mid">图片+文字{{cur_question}}</view>
      </view>
      <view class = "reccontainer4" data-month = "4" bindtap="gotoHeartrecDetail">
        <view class = "month in_mid">4月</view>
        <view class = "answer in_mid">{{cur_question}}</view>
      </view>
      <view class = "reccontainer4" data-month = "5" bindtap="gotoHeartrecDetail">
        <view class = "month in_mid">5月</view>
        <view class = "answer in_mid">{{cur_question}}</view>
      </view>
      <view class = "reccontainer4" data-month = "6" bindtap="gotoHeartrecDetail">
        <view class = "month in_mid">6月</view>
        <view class = "answer in_mid">{{cur_question}}</view>
      </view>
      <view class = "reccontainer4" data-month = "7" bindtap="gotoHeartrecDetail">
        <view class = "month in_mid">7月</view>
        <view class = "answer in_mid">{{cur_question}}</view>
      </view>
      <view class = "reccontainer4" data-month = "8" bindtap="gotoHeartrecDetail">
        <view class = "month in_mid">8月</view>
        <view class = "answer in_mid">{{cur_question}}</view>
      </view>
      <view class = "reccontainer4" data-month = "9" bindtap="gotoHeartrecDetail">
        <view class = "month in_mid">9月</view>
        <view class = "answer in_mid">{{cur_question}}</view>
      </view>
      <view class = "reccontainer4" data-month = "10" bindtap="gotoHeartrecDetail">
        <view class = "month in_mid">10月</view>
        <view class = "answer in_mid">{{cur_question}}</view>
      </view>
      <view class = "reccontainer4" data-month = "11" bindtap="gotoHeartrecDetail">
        <view class = "month in_mid">11月</view>
        <view class = "answer in_mid">{{cur_question}}</view>
      </view>
      <view class = "reccontainer4" data-month = "12" bindtap="gotoHeartrecDetail">
        <view class = "month in_mid">12月</view>
        <view class = "answer in_mid">{{cur_question}}</view>
      </view>
    </scroll-view>
  </view>
</view>