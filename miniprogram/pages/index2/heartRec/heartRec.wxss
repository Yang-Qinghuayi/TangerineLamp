/* 最大页面的底色 */
.page{
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}
/* 标题 */
.topcontainer{
  width:100%;
  background-color:#ffffff;
  border-radius: 2%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 7%;
}
/*标题1*/
.case_title{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 100%;
  background-color: #fff3eb;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 30rpx;
  color: #ff9933;
  font-size: 60rpx;
  font-weight: bold;
}
.reccontainer{
  width:100%;
  height:1200rpx;
  background-color:#fff3eb;
  border-radius: 2%;
  display: flex;
  flex-direction: column;
}
.reccontainer1{
  width: 100%;
  height: 10%;
  background-color:#ffffff;
  display: flex;
  flex-direction: row;
}
.reccontainer2{
  width: 70%;
  height: 100%;
  background-color:#ffffff;
  overflow-y: auto;
  box-sizing: border-box;/* 这将不会增加额外的高度 */
  padding-top: 25px;
  color: #ff9933;
  font-size: 30rpx;
}
.reccontainer3{
  width: 100%;
  height: 90%;
  background-color:#000000;
  display: flex;
  flex-direction: column;
}
.reccontainer4{
  width: 100%;
  height: 15%;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
}
.yearDay{
  width: 30%;
  height: 100%;
  background-color: #ffffff;
  color: #ff9933;
  font-size: 50rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
}
.in_mid{
  display: flex;
  justify-content: center;
  align-items: center;
}
.year{
  width: 100%;
  height: 50%;
}
.month{
  width: 30%;
  height: 100%;
  background-color: #534265;
  color: #ff9933;
  font-size: 60rpx;
  font-weight: bold;
}
.answer{
  width: 45%;
  height: 100%;
  background-color:#ffffff;
  overflow-y: auto;
  color: #ff9933;
  font-size: 30rpx;
  box-sizing: border-box;/* 这将不会增加额外的高度 */
  padding-top: 25px;
}
.picture{
  width: 25%;
  height: 100%;
  background-color: #ffffff;
}
.singlepicture{
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
}