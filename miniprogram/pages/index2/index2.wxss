/* 子元素居中通用样式设置 */
.in_mid {
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 子元素水平居中垂直顶格通用样式 */
.in_top {
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
/* 空白占位符 */
.blank {
  background-color: #efefef;
  width: 100%;
  height: 5rpx;
}
/* 最大页面的底色 */
.page {
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}
/***********************************标题部分***********************************/
/* 标题 */
.topcontainer {
  width: 100%;
  background-color: #ffffff;
  border-radius: 2%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 7%;
}
/* 心灵日记框 */
.reccontainer {
  width: 100%;
  height: 38vh;
  background-color: #fdfcf4;
  border-radius: 2%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}
.reccontainer1 {
  width: 30%;
  height: 100%;
}
.reccontainer2 {
  width: 70%;
  height: 100%;
}

/* 这是年份picker */
.reccontainer3 {
  width: 100%;
  height: 50%;
  background-color: #ffffff;
  font-weight: bold;
}
.reccontainer5 {
  width: 100%;
  height: 100%;
  flex-direction: column;
}
.reccontainer6 {
  width: 100%;
  height: 36%;
  display: flex;
  flex-direction: row;
}
.month {
  width: 22%;
  height: 100%;
  background-color: #e9dbc5;
  color: #ff9933;
  font-size: 40rpx;
  font-weight: bold;
}
.answer {
  width: 78%;
  height: 100%;
  background-color: #ffffff;
  overflow-y: auto;
  color: #ff9933;
  font-size: 30rpx;
  box-sizing: border-box; /* 这将不会增加额外的高度 */
  font-weight: bold;
}
/*标题1*/
.case_title {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 100%;
  background-color: #fff3eb;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 30rpx;
  color: #ff9933;
  font-size: 60rpx;
  font-weight: bold;
}
/*标题2*/
.case_title_2 {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  border-radius: 30rpx;
  color: #ff9933;
  font-size: 50rpx;
  font-weight: bold;
}
/***********************************轮播图部分***********************************/
.swipercontainer {
  background-color: #ffffff;
  border-radius: 2%;
  height: 450rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 3rpx;
}
.slide {
  height: 410rpx;
  width: 96%;
  border-radius: 20rpx;
  overflow: hidden;
}
.slide-image {
  width: 100%;
}
/***********************************选择图标部分***********************************/
/* 装载树洞首页的空白容器 */
.bodycontainer {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 2%;
  background-color: #ffffff;
  margin-bottom: 7%;
}
/* 图标容器 */
.imgcontainer {
  width: 80%;
  height: 60%;
}
/*首页通用标准图片大小样式*/
.stdimg {
  width: 80rpx;
  height: 80rpx;
}
/* 图片容器中的一级子容器 */
.imghalf {
  width: 100%;
  height: 50%;
  justify-content: space-around;
}
/* 图片容器只能中的二级子容器 */
.singleimg {
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
}
/* 设置分区标题内容 */
.case_info_top {
  color: #ff9933;
  font-size: 35rpx;
}
/* 设置分区标题下面的内容 */
.case_info {
  color: #8b8a8a;
  font-size: 25rpx;
}
.case_info_year {
  color: #ff9933;
  font-size: 50rpx;
  height: 100rpx;
  /* padding-top: 23rpx; */
}
.case_info_date {
  height: 50%;
  color: #ff9933;
  font-size: 70rpx;
}
.case_info_question {
  color: #ff9933;
  font-size: 30rpx;
  width: 100%;
}
.case_info_content {
  width: 100%;
}

.question {
  margin: 0rpx 14rpx 30rpx 14rpx;
  background: #e6edfd;
  padding: 40rpx 20rpx 30rpx 40rpx;
  /* 字体颜色 */
  color: #b8974a;
  /* 字体间距 */
  letter-spacing: 4rpx;
  /* 行间距 */
  line-height: 50rpx;
  /* 字体大小 */
  font-size: 38rpx;
  /* font-weight: 550; */
  /* 字体 */
  font-family: "楷体";
  border-radius: 18rpx;
}

/***********************************编辑入口***********************************/
/* 圆形按钮的样式 */
.circle {
  background-color: #ff9933;
  border: 0 solid #ffffff;
  box-shadow: 6rpx 1rpx 1rpx #cccccc;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 1%;
  color: #fff;
  font-size: 60rpx;
  border-radius: 50%;
}
