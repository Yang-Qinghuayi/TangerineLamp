}

.recommendComic{
  margin-top: 20rpx;
  margin-bottom: 100rpx;
  background: #eeeeee;
}

.title{
  font-size: 40rpx;
  /* font-weight: bold; */
  margin-top: 40rpx;
  /* background: white; */
  background: white;
  height: 70rpx;
  margin-top: 0rpx;
