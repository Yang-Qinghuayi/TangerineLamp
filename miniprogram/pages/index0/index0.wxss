/* pages/index0/index0.wxss */
page{
  background: white;
}

.slide{
  height: 425rpx;
  margin: 20rpx 20rpx 0rpx 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  transform: translateY(0);
  box-shadow: 0 2rpx 5rpx #999;
}

.slide-image{
  width: 100%;
}

.dailyMain{
  margin-top: -20rpx;
  margin-bottom: 10rpx;
}

.daily{
  height: 180rpx;
  display: flex;
  justify-content: center;
  /* background: #f9f9f9; */
}

/* 每日分享三大导航栏组件样式 */
/* 每日文章、治愈歌单、心理漫画 */

.daily-item1{
  display: flex;
  justify-content: space-between; /* 这会将子元素分散对齐，一个靠左，一个靠右 */
  align-items: center;
  padding: 0 15rpx 0 0;
  width: 2000rpx;
  height: 100rpx;
  margin-top: 50rpx; 
  margin-left: 25rpx;
  margin-right: 20rpx;
  background: #f7f6f6;
  border-radius: 20rpx;
  box-shadow: 0 0 1rpx #999;
}

/* 每日文章、治愈歌单、心理漫画 图标设置 */
.daily-icon-passage image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 27rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
}

.daily-icon-music image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 27rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
}

.daily-icon-comic image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 25rpx;
}

.daily-info{
  font-size: 28rpx;
  /* bold */
  font-weight: 600;
  position: relative;
  color: #666666;
  font-family: '微软雅黑';
  bottom: 10rpx;
  left: -10rpx;
  margin-left: 32rpx;
  margin-top: 20rpx;
}

/* 热门内容展示 */

.contentShow{
  background: #f7f6f6;
  padding: 25rpx 0 0;
  height: 75rpx;
  margin-bottom: 25rpx;
  border-radius: 20rpx;
  margin: 20rpx;
  /* 阴影,参数的含义分别为: */
  box-shadow: 0 0 2rpx #999;
}

/* 标题部分 */
.title{
  display: flex;
  justify-content: space-between;
  height: 50rpx;
  align-items: center;
  /* margin-bottom: 20rpx; */
  margin-left: 22rpx;
}

.title .titleTxt{
  font-size: 35rpx;
  font-weight: bold;
  height: 100%;
  position: relative;
  padding-left: 28rpx;
}

