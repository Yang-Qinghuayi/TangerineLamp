.title .more{
  font-size: 30rpx;
  font-weight: bold;
  color: #666;
  margin-right: 20rpx;
}

/* 文章内容展示模块 */
.contentContainer{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 22rpx;
  margin-right: 22rpx;
}

.contentContainer .contentBody{
  width: 344rpx;
  height: 214rpx;
  margin-bottom: 15rpx;
  position: relative;
}

.contentContainer .introPic{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.contentContainer .text{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.4);
  position: absolute;
  top: 0;
  left: 0;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
}

.contentContainer .text .contentTitle{
  font-size: 34rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  text-align: center;
  display: -webkit-box;
  overflow: hidden;
  text-emphasis: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 漫画内容展示模块 */
.comicBody{
  width: 300rpx;
  height: 400rpx;
  margin-bottom: 40rpx;
  margin-left: 27rpx;
  margin-right: 27rpx;
  position: relative;
}

.comicPic{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.comicBackground{
  width: 100%;
  height: 8%;
  background: rgba(0,0,0,0.55);
  position: absolute;
  /* top: 0; */
  left: 0;
  bottom: 0;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
}

.comicTitle{
  font-size: 24rpx;
  text-align: center;
  display: -webkit-box;
  overflow: hidden;
  text-emphasis: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
