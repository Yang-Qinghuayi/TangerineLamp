/* pages/index0/index0.wxss */
page {
  background: white;
}

.slide {
  height: 425rpx;
  margin: 20rpx 20rpx 0rpx 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  transform: translateY(0);
  box-shadow: 0 2rpx 5rpx #999;
}

.slide-image {
  width: 100%;
}

.dailyMain {
  margin-top: -20rpx;
  margin-bottom: 10rpx;
}

.daily {
  height: 180rpx;
  display: flex;
  justify-content: center;
  /* background: #f9f9f9; */
}

/* 每日分享三大导航栏组件样式 */
/* 每日文章、治愈歌单、心理漫画 */

.daily-item1 {
  display: flex;
  justify-content: space-between; /* 这会将子元素分散对齐，一个靠左，一个靠右 */
  align-items: center;
  width: 50%;
  padding: 0 15rpx 0 0;
  height: 100rpx;
  margin-top: 50rpx;
  margin-left: 25rpx;
  margin-right: 20rpx;
  background: #f7f6f6;
  border-radius: 20rpx;
  box-shadow: 0 0 1rpx #999;
}

.dialog {
  display: flex;
  justify-content: space-between; /* 这会将子元素分散对齐，一个靠左，一个靠右 */
  align-items: center;
  width: 300rpx;
  padding: 0 15rpx 0 0;
  height: 100rpx;
  margin-top: 80rpx;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 60rpx;
  background: #f7f6f6;
  border-radius: 20rpx;
  box-shadow: 0 0 1rpx #999;
}

/* 每日签到 */
.daily-check {
  display: flex;
  justify-content: space-between; /* 这会将子元素分散对齐，一个靠左，一个靠右 */
  align-items: center;
  width: 95vw;
  padding-right: 20rpx;
  box-sizing: border-box;
  height: 124rpx;
  margin: 10rpx 20rpx;
  margin-bottom: 40rpx;
  background: #f7f6f6;
  border-radius: 20rpx;
  box-shadow: 0 0 1rpx #999;
}

.sign-in-word{
  /* 居中 */
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  margin-left: 24rpx;
  writing-mode: vertical-lr;
  border-radius: 50%;
  background: #c4b33f;
}

/* 每日文章、治愈歌单、心理漫画 图标设置 */
.daily-icon-passage image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 27rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
}

.daily-icon-music image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 27rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
}

.daily-icon-comic image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 25rpx;
}

.daily-info {
  height: max-content;
  font-size: 28rpx;
  /* bold */
  font-weight: 600;
  position: relative;
  color: #666666;
  font-family: "微软雅黑";
  bottom: 10rpx;
  left: -10rpx;
  margin-left: 32rpx;
  margin-top: 20rpx;
}

/* 热门内容展示 */

/* 标题部分 */
.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f7f6f6;
  padding: 25rpx 0 0;
  height: 70rpx;
  border-radius: 5rpx;
  margin-top: 20rpx;
  margin: 20rpx 20rpx 0 20rpx;
  /* 阴影,参数的含义分别为: */
  box-shadow: 0 0 1rpx #999;
}

.title .titleTxt {
  font-size: 35rpx;
  font-weight: bold;
  height: 100%;
  position: relative;
  padding-left: 28rpx;
}

.title .more {
  font-size: 30rpx;
  font-weight: bold;
  color: #666;
  margin-right: 20rpx;
  margin-bottom: 24rpx;
}

/* 文章内容展示模块 */
.contentContainer {
  margin-top: 18rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 22rpx;
  margin-right: 22rpx;
}

.contentContainer .contentBody {
  width: 310rpx;
  height: 408rpx;
  margin-bottom: 15rpx;
  position: relative;
  border-radius: 20rpx;
  background-color: #faf2f1;
}

.contentContainer .contentBodyMusic {
  width: 310rpx;
  height: 376rpx;
  margin-bottom: 15rpx;
  position: relative;
  border-radius: 20rpx;
  background-color: #faf2f1;
}

.contentContainer .introPic {
  width: 304rpx;
  height: 304rpx;
  border-radius: 20rpx;
}

.contentContainer .contentTitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #666;
  /* 水平方向margin */
  margin-left: 20rpx;
  margin-bottom: 8rpx;
  margin-top: 8rpx;
  display: -webkit-box;
  overflow: hidden;
  text-emphasis: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.contentContainer .contentAbout {
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
  /* 水平方向margin */
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  text-emphasis: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 漫画内容展示模块 */
.comicBody {
  width: 300rpx;
  height: 400rpx;
  margin-bottom: 40rpx;
  margin-left: 27rpx;
  margin-right: 27rpx;
  position: relative;
}

.comicPic {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.comicBackground {
  width: 100%;
  height: 8%;
  background: rgba(0, 0, 0, 0.55);
  position: absolute;
  /* top: 0; */
  left: 0;
  bottom: 0;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
}

.comicTitle {
  font-size: 24rpx;
  text-align: center;
  display: -webkit-box;
  overflow: hidden;
  text-emphasis: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
