/* pages/index0/movie/movie.wxss */
.header {
  padding: 41rpx;
  position: relative;
}

.title {
  font-size: 50rpx;
  font-weight: bold;
  color: #ff8833;
}

.des {
  font-size: 30rpx;
  color: #aaa;
  line-height: 67rpx;
}

/* 文章内容展示模块 */
.contentContainer {
  margin-top: 18rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 42rpx;
  margin-right: 42rpx;
}

.contentContainer .contentBody {
  width: 304rpx;
  height: 340rpx;
  margin-bottom: 15rpx;
  position: relative;
  border-radius: 20rpx;
  background-color: #faf2f1;
}

.contentContainer .introPic {
  width: 304rpx;
  height: 244rpx;
  border-radius: 20rpx;
}

.contentContainer .contentTitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #666;
  /* 水平方向margin */
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  text-emphasis: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.contentContainer .contentAbout {
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
  /* 水平方向margin */
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  text-emphasis: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.dialog {
  display: flex;
  justify-content: space-between; /* 这会将子元素分散对齐，一个靠左，一个靠右 */
  align-items: center;
  width: 300rpx;
  padding: 0 15rpx 0 0;
  height: 100rpx;
  margin-top: 80rpx;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 60rpx;
  background: #f7f6f6;
  border-radius: 20rpx;
  box-shadow: 0 0 1rpx #999;
}

.daily-icon-passage image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 27rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
}

.daily-info {
  height: max-content;
  font-size: 28rpx;
  /* bold */
  font-weight: 600;
  position: relative;
  color: #666666;
  font-family: "微软雅黑";
  bottom: 10rpx;
  left: -10rpx;
  margin-left: 32rpx;
  margin-top: 20rpx;
}
