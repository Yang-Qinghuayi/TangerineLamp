/* pages/index0/movie/movie.wxss */

/* 标题部分 */
.title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #f7f6f6;
    padding: 25rpx 0 0;
    height: 70rpx;
    border-radius: 5rpx;
    margin-top: 20rpx;
    margin: 20rpx 20rpx 0 20rpx;
    /* 阴影,参数的含义分别为: */
    box-shadow: 0 0 1rpx #999;
  }
  
  .title .titleTxt {
    font-size: 35rpx;
    font-weight: bold;
    height: 100%;
    position: relative;
    padding-left: 28rpx;
  }

  /* 文章内容展示模块 */
.contentContainer {
    margin-top: 18rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-left: 22rpx;
    margin-right: 22rpx;
  }
  
  .contentContainer .contentBody {
    width: 304rpx;
    height: 340rpx;
    margin-bottom: 15rpx;
    position: relative;
    border-radius: 20rpx;
    background-color: #faf2f1;
  }


  .contentContainer .introPic {
    width: 304rpx;
    height: 244rpx;
    border-radius: 20rpx;
  }
  
  .contentContainer .contentTitle {
    font-size: 30rpx;
    font-weight: bold;
    color: #666;
    /* 水平方向margin */
    margin-left: 20rpx;
    margin-bottom: 10rpx;
    display: -webkit-box;
    overflow: hidden;
    text-emphasis: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .contentContainer .contentAbout {
    font-size: 24rpx;
    font-weight: bold;
    color: #666;
    /* 水平方向margin */
    margin-left: 20rpx;
    margin-bottom: 10rpx;
    display: -webkit-box;
    overflow: hidden;
    text-emphasis: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }