/* pages/index0/music/music.wxss */

page {
  display: flex;
  flex-direction: column;
  background: #eeeeee;
  color: black;
  height: 100%;
}
.header{
  padding: 41rpx;
  position: relative;
}

.title{
  font-size: 50rpx;
  font-weight: bold;
  color: #ff8833;
}

.des{
  font-size: 30rpx;
  color: #aaa;
  line-height: 67rpx;
}
.slide{
  /* height: 300rpx; */
  height: 425rpx;
  margin: 20rpx 20rpx 0rpx 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  transform: translateY(0);
}

.slide-image{
  width: 100%;
  /* border-radius: 20rpx;
  margin: 20rpx 20rpx 20rpx 20rpx;
  transform: translateY(0);
  height: 350rpx; */
}

.recommendMusic{
  margin-top: 30rpx;
  margin-bottom: 200rpx;
}




/* 播放列表 */

.playlist-item {
  display: flex;
  align-items: center;
  /* border-bottom: 1rpx solid #ff9933; */
  height: 150rpx;
  background: white;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-bottom: 5rpx;
  border-radius: 10rpx;
}

.playlist-cover {
  width: 100rpx;
  height: 100rpx;
  margin-left: 25rpx;
  border-radius: 8rpx;
}

.playlist-info {
  flex: 1;
  font-size: 32rpx;
  line-height: 38rpx;
  margin-left: 20rpx;
  padding-bottom: 8rpx;
}

.playlist-info-singer {
  color: #888;
  font-size: 25rpx;
}

.playlist-controls {
  font-size: 28rpx;
  margin-right: 30rpx;
  color: #ff9933;
}



.title .titleTxt {
  font-size: 35rpx;
  font-weight: bold;
  height: 100%;
  position: relative;
  padding-left: 28rpx;
}

.title .more {
  font-size: 30rpx;
  font-weight: bold;
  color: #666;
  margin-right: 20rpx;
}


/* 底部播放器 */

.player {
  display: flex;
  align-items: center;
  background: white;
  height: 130rpx;
  width: 750rpx;
  border-top: 5rpx solid #eeeeee;
  bottom: 0;
  position: fixed;
}

.player-cover {
  width: 80rpx;
  height: 80rpx;
  margin-left: 15rpx;
  border-radius: 8rpx;
}

.player-info {
  flex: 1;
  font-size: 10pt;
  line-height: 38rpx;
  margin-left: 20rpx;
  padding-bottom: 8rpx;
}

.player-info-singer {
  color: #888;
}

.player-controls1 image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 30rpx;
}

.player-controls2 image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 35rpx;
}

/* 文章内容展示模块 */
.contentContainer {
  margin-top: 18rpx;
  display: flex;
  margin-left: 42rpx;
  margin-right:42rpx;
  justify-content: space-between;
}

.contentContainer .contentBodyMusic {
  height: 380rpx;
  margin-bottom: 15rpx;
  position: relative;
  border-radius: 20rpx;
  background-color: #faf2f1;
  
}

.contentContainer .introPic {
  width: 304rpx;
  height: 304rpx;
  border-radius: 20rpx;
}

.contentContainer .contentTitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #666;
  /* 水平方向margin */
  margin-left: 21rpx;
  margin-top: 10rpx;
  /* margin-bottom: 10rpx; */
  display: -webkit-box;
  overflow: hidden;
  text-emphasis: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


.dialog {
  display: flex;
  justify-content: space-between; /* 这会将子元素分散对齐，一个靠左，一个靠右 */
  align-items: center;
  width: 300rpx;
  padding: 0 15rpx 0 0;
  height: 100rpx;
  margin-top: 80rpx;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 60rpx;
  background: #f7f6f6;
  border-radius: 20rpx;
  box-shadow: 0 0 1rpx #999;
}

.daily-icon-passage image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 27rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
}

.daily-info {
  height: max-content;
  font-size: 28rpx;
  /* bold */
  font-weight: 600;
  position: relative;
  color: #666666;
  font-family: "微软雅黑";
  bottom: 10rpx;
  left: -10rpx;
  margin-left: 32rpx;
  margin-top: 20rpx;
}

