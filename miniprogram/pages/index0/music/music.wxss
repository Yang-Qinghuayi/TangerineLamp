page {
  display: flex;
  flex-direction: column;
  background: #eeeeee;
  color: black;
  height: 100%;
}

.slide{
  /* height: 300rpx; */
  height: 425rpx;
  margin: 20rpx 20rpx 0rpx 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  transform: translateY(0);
}

.slide-image{
  width: 100%;
  /* border-radius: 20rpx;
  margin: 20rpx 20rpx 20rpx 20rpx;
  transform: translateY(0);
  height: 350rpx; */
}

.recommendMusic{
  margin-top: 30rpx;
  margin-bottom: 200rpx;
}

.title{
  font-size: 40rpx;
  /* font-weight: bold; */
  margin-left: 30rpx;
  margin-top: 30rpx;
}


/* 播放列表 */

.playlist-item {
  display: flex;
  align-items: center;
  /* border-bottom: 1rpx solid #ff9933; */
  height: 150rpx;
  background: white;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-bottom: 5rpx;
  border-radius: 10rpx;
}

.playlist-cover {
  width: 100rpx;
  height: 100rpx;
  margin-left: 25rpx;
  border-radius: 8rpx;
}

.playlist-info {
  flex: 1;
  font-size: 32rpx;
  line-height: 38rpx;
  margin-left: 20rpx;
  padding-bottom: 8rpx;
}

.playlist-info-singer {
  color: #888;
  font-size: 25rpx;
}

.playlist-controls {
  font-size: 28rpx;
  margin-right: 30rpx;
  color: #ff9933;
}

/* 底部播放器 */

.player {
  display: flex;
  align-items: center;
  background: white;
  height: 130rpx;
  width: 750rpx;
  border-top: 5rpx solid #eeeeee;
  bottom: 0;
  position: fixed;
}

.player-cover {
  width: 80rpx;
  height: 80rpx;
  margin-left: 15rpx;
  border-radius: 8rpx;
}

.player-info {
  flex: 1;
  font-size: 10pt;
  line-height: 38rpx;
  margin-left: 20rpx;
  padding-bottom: 8rpx;
}

.player-info-singer {
  color: #888;
}

.player-controls1 image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 30rpx;
}

.player-controls2 image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 35rpx;
}




