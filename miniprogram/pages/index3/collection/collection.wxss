.contentContainer {
  margin-top: 18rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 32rpx;
  margin-right: 32rpx;
}
.contentContainer .contentBodyMusic {
  width: 310rpx;
  height: 380rpx;
  margin-bottom: 15rpx;
  position: relative;
  border-radius: 20rpx;
  background-color: #faf2f1;
}

.contentContainer .contentAbout {
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
  /* 水平方向margin */
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  text-emphasis: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.contentContainer .introPic {
  width: 304rpx;
  height: 304rpx;
  border-radius: 20rpx;
}

.contentContainer .contentTitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #666;
  /* 水平方向margin */
  margin-left: 21rpx;
  margin-top: 10rpx;
  /* margin-bottom: 10rpx; */
  display: -webkit-box;
  overflow: hidden;
  text-emphasis: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.bottom {
  background-color: orange;
  height: 10vh;
  width: 100%;
  position: relative;
}
.bottom .title {
  padding: 5rpx 5rpx;
  text-align: center;
  top: 20%;
  font-weight: bold;
  position: relative;
  font-size: 50rpx;
  color: whitesmoke;
  font-family: "Courier New", Courier, monospace;
}

.passage {
  display: flex;
  margin-bottom: 100rpx;
}

.passage-item {
  display: flex;
  height: 205rpx;
  background-color: #eeeeee;
  border-top: 7rpx solid white;
  border-bottom: 10rpx solid white;
  border-left: 5rpx solid white;
  border-right: 5rpx solid white;
  margin-left: 30rpx;
  margin-right: 30rpx;
  align-items: center;
  border-radius: 15rpx;
}

.passage-info {
  flex: 2;
  margin-top: 0rpx;
  margin-left: 30rpx;
  height: 90%;
}

.passage-introImage {
  position: relative;
  flex: 1.2;
  height: 75%;
  margin-left: 25rpx;
}

.passage-introImage image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.passage-title {
  margin-top: 25rpx;
  margin-left: 5rpx;
  font-family: "微软雅黑";
  font-size: 36rpx;
  display: -webkit-box;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.passage-des {
  color: #797676;
  font-size: 26rpx;
  margin-top: 10rpx;
  margin-left: 5rpx;
}
