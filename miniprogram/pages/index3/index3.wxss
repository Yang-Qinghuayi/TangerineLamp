.user_login {
  height: 380rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user_login .user_login_btn {
  height: fit-content;
  width: fit-content;
  border-radius: 10rpx;
  padding: 20rpx;
  padding-left: 8vw;
  padding-right: 8vw;
  color: #ffffff;
  background-color: #c4b33f;
}
.user_info_part {
  height: 26vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user_info_part .user_info {
  background-color: #c4b33f;
  flex: 1;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
}
.user_info_part .user_info .user_info_pic {
  margin-left: 20rpx;
  margin-top: 20rpx;
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
}
.user_info_part .user_info .user_info_name {
  font-size: 50rpx;
  font-weight: bold;
  color: #fff;
  margin-top: 20rpx;
  margin-left: 34rpx;
  margin-bottom: 20rpx;
}
.user_vip {
  justify-items: center;
  position: absolute;
  background-color: #fff;
  border-radius: 50%;
  width: 5rpx;
  height: 5rpx;
  bottom: -20rpx;
  right: -20rpx;
  z-index: 3;
}
.user_name {
  color: white;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.user_content {
  position: relative;
  font-weight: bold;
  color: #402121;
  font-size: 26rpx;
}
.user_content .user_main {
  display: flex;
  flex-direction: column;
}
.user_content .user_main .history_wrap {
  flex: 1;
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding: 10rpx;
  background-color: #eeeeee;
  display: flex;
  border-radius: 10rpx;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: orange;
}
.user_content .user_main .orders_wrap {
  margin-left: 10rpx;
  background-color: #eeeeee;
  margin-right: 10rpx;
  margin-top: 30rpx;
  border-radius: 10rpx;
}
.user_content .user_main .orders_wrap .orders_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .orders_wrap .order_content {
  display: flex;
}
.user_content .user_main .orders_wrap .order_content navigator {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.user_content .user_main .orders_wrap .order_content navigator .iconfont {
  color: orange;
  font-size: 40rpx;
}
.user_content .user_main .address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.user_content .user_main .app_info_wrap {
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
  background-color: #eeeeee;
}
.user_content .user_main .app_info_wrap .app_info_item {
  padding: 40rpx;
}
.user_content .user_main .app_info_wrap .app_info_contact {
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommend_wrap {
  margin-top: 30rpx;
  background-color: #eeeeee;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  color: #c4b33f;
  font-weight: bold;
  padding: 40rpx;
}
.user_content .user_main .setting {
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  background-color: #eeeeee;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  font-weight: bold;
  padding: 40rpx;
}
