/*********************************** 顶部容器部分 **********************************/
.top{
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 2%;
  background-color: #ffffff;
  flex-wrap: wrap;
  margin-top: 300rpx;
}
/*********************************** 按钮容器部分 **********************************/
.singlecontainer{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.certiButton{
  width: 200rpx;
  height: 100rpx;
  border-radius: 15rpx;
  background-color: #ff9933;
  font-size: 40rpx;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}