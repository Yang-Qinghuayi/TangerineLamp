.bottom {
  padding-top:10rpx;
  background-color:#f7f7f7;
  height: calc( 100vh - 120rpx );
}

.noneAppointment {
  text-align: center;
  padding-top: 400rpx;
  color:#b3b3b3;
}

.freeTime_item {
  background-color: #fff;
  display: flex;
  /* height: 222rpx; */
  padding:20rpx;
  padding-right:40rpx;
  border-bottom: 3rpx solid var(--orange0);
  border-radius: 10rpx;
  margin: 20rpx;
  align-items: center;
  height: 160rpx;
}

.picBlock {
  flex:1;
  height: 100%;
  display: block;
  text-align: center;
  align-items: center;
  display: flex;
  border-right: 1rpx #eee solid;
  margin-right: 20rpx;
  padding-right:20rpx;
}

.picBlock image{
  height: 150rpx;
  width: 150rpx;
  border-radius:75rpx;
}

.leftBlock {
  height: 100%;
  flex:3;
}

.detail_header {
  width: 100%;
  margin-top:-40rpx;
}

.doctorName {
  font-family: '微软雅黑';
  font-weight: bold;
  display: inline-block;
}


.level {
  margin-top: 15rpx;
  font-size:30rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space:normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.speciality {
  margin-top: 13rpx;
  font-size:30rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space:normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}