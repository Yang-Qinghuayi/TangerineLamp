<view>
  <view class='date-show'>
    <div class='lt-arrow' bindtap='lastMonth'>
      <image src='{{picList[0]}}' mode='aspectFill'></image>
    </div>
    <div class='year-and-month'>
      {{year}}年{{month}}月
    </div>
    <div class='rt-arrow' bindtap='nextMonth'>
      <image src='{{picList[1]}}' mode='aspectFill'></image>
    </div>
  </view>
  <view class='header'>
    <view wx:for='{{date}}' class='{{(index == todayIndex) && isTodayWeek ? "weekMark" : ""}}'>
      {{item}}
      <view></view>
    </view>
  </view>
  <view class='date-box'>
    <!-- 渲染的时候用数据库里的数据，同一月份的数据，有数据样式就改变 -->
    <view wx:for='{{dateArr}}' wx:key="dateArr_" wx:for-item="item1" class='{{item1.isColor? (index==dateClicked? "nowDayClicked" : "nowDay") : (index==dateClicked? "notNowDayClicked" : "")}}' bindtap='{{item1.isColor? "onClickCheckedDate" : "onClickUncheckedDate"}}' mark:dateArrID="{{index}}">
      <view class='date-head'>
        <view>{{ item1.dateNum }}</view>
      </view>
    </view>
  </view>
</view>
<button class="submit" bindtap="sign_in">{{content}}</button>
<text>{{rand}}</text>