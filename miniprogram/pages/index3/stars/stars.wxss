/* pages/index3/stars/stars.wxss */
.date-show {
  display: flex;
  margin-top: 60rpx;
  margin-bottom: 10rpx;
  justify-content: space-between;
  align-items: center;
}

.lt-arrow{
  flex: 0 0 auto;
  padding-left: 165rpx;
  display: flex;
  align-items: center;
}
.rt-arrow{
  flex: 0 0 auto;
  padding-right: 165rpx;
  display: flex;
  align-items: center;
}
.year-and-month{
  font-family: PingFang-SC-Regular;
  font-size: 40rpx;
  text-align: center;
  flex: 0 0 auto;
}

.lt-arrow image,
.rt-arrow image {
  width: 40rpx;
  height: 40rpx;
}

.lt-arrow {
  left: -110rpx;
  /* transform: rotate(180deg); */
}

.rt-arrow {
  right: -100rpx;
}

.header {
  font-size: 0;
  padding: 0 24rpx;
}

.header>view {
  display: inline-block;
  width: 14.285%;
  color: #333;
  font-size: 30rpx;
  text-align: center;
  border-bottom: 1px solid #D0D0D0;
  padding: 39rpx 0;
}

.weekMark {
  position: relative;
}

.weekMark view {
  /* font-family: "微软雅黑";
    font-size: 40rpx; */
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-bottom: 1px solid #22A7F6;
}

.date-box {
  font-size: 0;
  padding: 10rpx 0;
}

.date-box>view {
  position: relative;
  display: inline-block;
  width: 14.285%;
  color: #020202;
  font-size: 40rpx;
  text-align: center;
  vertical-align: middle;
  margin: 15rpx 0;
}

.date-head {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
}

.nowDay .date-head {
  width: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  /* background-color: orange; */
  /* background-color: #22A7F6; */
  background-color: var(--orange0);
  margin: 0 auto;
}

.date-weight {
  font-size: 22rpx;
  padding: 15rpx 0;
}

.nowDay .date-weight {
  color: #f67022;
  /* color: #22A7F6; */
}

.one {
  position: absolute;
  bottom: 0;
  right: 5rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: red;
}

.two {
  position: absolute;
  bottom: 30rpx;
  right: 5rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: blue;
}

.submit {
  color: white;
  background-color: orange;
  font-size: 40rpx;
  align-content: center;
}

.nowDayClicked .date-head{
  width: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  /* background-color: orange; */
  /* background-color: #22A7F6; */
  background-color: #00dd09;
  margin: 0 auto;
}

.notNowDayClicked .date-head{
  width: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  /* background-color: orange; */
  /* background-color: #22A7F6; */
  background-color: #00ddee;
  margin: 0 auto;
}