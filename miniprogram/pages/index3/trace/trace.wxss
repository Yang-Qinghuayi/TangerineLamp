/*************************************标题部分*************************************/
/* 标题 */
.bottom {
  background-color: orange;
  height: 50px;
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bottom .pic{
  top: 20%;
  padding: 5rpx 5rpx;
    position: relative;
    width: 80rpx;
    height: 80rpx;
    margin-left: 30rpx;
}
.bottom .title {
  padding: 5rpx 5rpx;
  text-align: center;
  font-weight: bold;
  top: 20%;
  position: relative;
  font-size: 50rpx;
  color: whitesmoke;
  font-family: 'Courier New', Courier, monospace;
}

page{
  background: #efefef;
  height: 100%;
}
/* 子元素居中通用样式设置 */
.in_mid{
  display: flex;
  justify-content: center;
  align-items: center;
}


/*************************************导航栏*************************************/
/* 导航栏主体 */
.scroll-wrapper {
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
  background: #FFF;
  height: 50px;
  padding: 0 32rpx;
  box-sizing: border-box;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/* 导航项 */
.navigate-item {
  width: 50%;
  display: inline-block;
  text-align: center;
  height: 50px;
  line-height: 50px;
  /* margin: 0 16rpx; */
}
/* 导航项名字 */
.names {
  font-size: 28rpx;
  color: #3c3c3c;
}
/* 导航项被选择时名字激活 */
.names.active {
  color: #00cc88;
  font-weight: bold;
  font-size: 34rpx;
}
/* 导航项下划线 */
.currtline {
  margin: -8rpx auto 0 auto;
  width: 100%;
  height: 8rpx;
  border-radius: 4rpx;
}
/* 导航项被选择时下划线激活 */
.currtline.active {
  background: #47CD88;
  transition: all .3s;
}

/**************************评论部分**************************/
/* 整个评论区 */
.commentContainer{
  width: 100%;
}
/* 单独的一个评论 */
/* 是一个一级容器 */
.singleComment{
  width: 100%;
  display: flex;
  background-color: #fff;
  padding-bottom: 15rpx;
  padding-top: 15rpx;
}
/* 该条评论的主人头像的二级容器 */
.commentHead{
  margin-left: 2%;
  margin-top: 10rpx;
  position: relative;
  width: 75rpx;
  height: 75rpx;
  z-index: 1;
}
/* 该条评论的主人的头像 */
.commentHeadImg{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
/* 该条评论的主人的信息二级容器 */
.commentInfoContainer{
  width: 80%;
  margin-left: 2%;
}
/* 该条评论的主人的昵称 */
.commentNickname{
  color: #ff9933;
  font-size: 35rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
/* 认证的V标 */
.host_vip{
  justify-items: center;
  position: absolute;
  background-color: #fff;
  border-radius: 50%;
  width:40%;
  height: 40%;
  bottom: -10rpx;
  right:-10rpx;
  z-index: 2;
}
/* 该条评论的具体内容 */
.commentDetail{
  color: #3d3a3a;
  font-size: 35rpx;
  font-family: "楷体";
  margin-bottom: 10rpx;
}
/* 该条评论的上传时间 */
.commentPostTime{
  color: #868585;
  font-size: 20rpx;
}
/* 每个评论之间的分割线 */
.line3{
  background-color:#b9b9b9;
  width:96%;
  height:3rpx;
}
.line4{
  background-color:#b9b9b9;
  margin-left: 20%;
  width:80%;
  height:1rpx;
}
  /* 删除按钮的标准样式 */
  .deleteImg{
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
  }
