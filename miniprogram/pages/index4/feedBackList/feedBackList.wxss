/***********************************标题部分***********************************/
/* 标题 */
.topcontainer {
  position: fixed;
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  border-radius: 2%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 3rpx;
}

/*标题*/
.case_title {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 100rpx;
  background-color: #fff3eb;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 30rpx;
  color: #ff9933;
  font-size: 40rpx;
  font-weight: bold;
}

.bottom {
  padding-top:130rpx;
  background-color:#f7f7f7;
  height: calc( 100vh - 150rpx );
}

.freeTime_item {
  background-color: #fff;
  display: flex;
  /* height: 222rpx; */
  padding:20rpx;
  /* padding-right:40rpx; */
  border-bottom: 3rpx solid var(--orange0);
  border-radius: 10rpx;
  margin: 0 20rpx;
  align-items: center;
  height: 160rpx;
}

.picBlock {
  flex:1;
  height: 100%;
  display: flex;
  text-align: center;
  align-items: center;
  display: flex;
  border-right: 1rpx #eee solid;
  /* margin-right: 20rpx; */
  padding-right:20rpx;
}

.picBlock image{
  height: 150rpx;
  width: 150rpx;
  border-radius:75rpx;
}

.leftBlock {
  height: 100%;
  flex:3;
  /* justify-content: flex-end; */
  /* align-items: end; */
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.detail_header {
  width: 100%;
  display: flex;
  font-size: 18px;
  line-height: 20px;
  justify-content: space-between;

}

.name {
  font-family: '微软雅黑';
  font-weight: bold;
  display: inline-block;
}
.time{
  font-size: 10px;
}

.level {
  /* margin-top: 15rpx; */
  font-size:25rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space:normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.speciality {
  /* margin-top: 13rpx; */
  font-size:25rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space:normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}