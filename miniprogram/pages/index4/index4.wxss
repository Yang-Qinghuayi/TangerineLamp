/* pages/feedback/feedback.wxss */
page {
  background-color: white;
}

/***********************************标题部分***********************************/
/* 标题 */
.topcontainer {
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  border-radius: 2%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 3rpx;
}

/*标题*/
.case_title {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 100rpx;
  background-color: #fff3eb;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 30rpx;
  color: #ff9933;
  font-size: 40rpx;
  font-weight: bold;
}

.content_wrap,
.phone {
  width: 96%;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 20rpx auto;
  box-shadow: 0px 0px 10px 2px rgb(0 0 0 / 8%);
}

.content {
  padding: 20rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}

textarea {
  min-height: 300rpx;
  width: 100%;
}

input {
  margin-top: 30rpx;
  height: 100rpx;
  padding-left: 20rpx;
  background-color: #fff;
}

button {
  height: 50px;
  font-size: 20px;
  color: white;
  width: 85%;
  margin: 40rpx auto;
  background: #ff9933;
  border-radius: 40rpx;
}

.button_active {
  background: #ff6633;
}

.placeholder {
  color: #b6b6b6;
  font-size: 14px;
}

/* #############眼睛按钮############# */
.look{
  position: fixed;
  top: 80%;
  left: 75%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.lookicon{
  height: 50px;
  width: 50px;
}
.looktext{
  font-size: 14px;
}