/***********************************标题部分***********************************/
/* 标题 */
.topcontainer {
  /* position: fixed; */
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  border-radius: 2%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 3rpx;
}

/*标题*/
.case_title {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 100rpx;
  background-color: #fff3eb;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 30rpx;
  color: #ff9933;
  font-size: 40rpx;
  font-weight: bold;
}
/**************************正文部分**************************/
/* 储存正文内容的一级容器 */
/* 大小会随着正文内容的多少而转变 */
.hostArticleContainer{
  width: 100%;
}
/* 信息的二级容器 */
.treeholeInfoContainer{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: start;
  padding-top: 20rpx;
  padding-left: 30rpx;
}
/* 头像信息的三级容器 */
.hostHead{
  width: 13%;
  height: 100rpx;
  position: relative;
  z-index: 1;
}
/* 头像 */
.hostHeadImg{
  width: 90%;
  height: 90%;
  border-radius: 15rpx;
}
/* 认证的V标 */
.host_vip{
  justify-items: center;
  position: absolute;
  background-color: #fff;
  border-radius: 50%;
  width:40%;
  height: 40%;
  bottom: -10rpx;
  right:-10rpx;
  z-index: 2;
}
/* 信息的三级容器 */
.hostInfo{
  width: 88%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  /* margin-top: 25rpx; */
  margin-left: 5rpx;
}
/* 昵称 */
.hostNickname{
  width: 50%;
  height: 50rpx;
  font-weight: bold;
  color: #ff9933
}
/* 上传时间 */
.postTime{
  width: 50%;
  color: rgb(88, 88, 88);
  height: 50rpx;
  font-weight: bold;
  margin-top: 25rpx;
  padding-bottom: 0rpx;
  font-size: 20rpx;
}
.line1{
  width: 98%;
  height: 2rpx;
  background-color: #000;
}

/* 正文内容 */
.article{
  width: 96%;
  margin-left: 2%;
  margin-right: 2%;
  margin-top: 5%;
  /* background-color: #efefef; */
  color: #3a3a3a;
  font-size: 30rpx;
}

/* 分割线 */
.line2{
  width: 96%;
  height: 3rpx;
  background-color: #868585;
}