<view class="topcontainer">
  <view class="evaluation" style="background-color:{{select ? '#e9dbc5': '#eeeeee'}} ; border-radius:10rpx" bindtap="changeStatue1">
    <image src="data:image/svg+xml;base64," class="topimg"></image>
    <text class="text">心理测评</text>
  </view>
  <view class="consultation" style="background-color:{{!select ? '#e9dbc5': '#eeeeee'}} ; border-radius:10rpx" bindtap="changeStatue2">
    <image src="data:image/svg+xml;base64," class="topimg"></image>
    <text class="text">心理咨询</text>
  </view>
</view>
<!-- 选择渲染 -->
<view wx:if="{{select}}">
  <view class="bottom">
    <!-- 左侧菜单 -->
    <scroll-view scroll-y class="left_menu">
      <view class="menu_item {{index===currentIndex?'active':''}}" wx:for="{{leftMenuList}}" wx:key="*this" bindtap="switchRightTab" data-index="{{index}}">
        {{item}}
      </view>
    </scroll-view>
    <!-- 右侧心理测试列表 -->
    <scroll-view scroll-top="{{scrollTop}}" scroll-y class="right_content" bindscrolltolower="bottomRefresh" lower-threshold="20">
      <block wx:if="{{rightTestList.length===0}}">
        <view class="noneAppointment">暂无可用测评</view>
      </block>
      <block wx:if="{{!(rightTestList.length===0)}}">
        <view class="test_item" wx:for="{{rightTestList}}" wx:for-index="index1" wx:for-item="item1" wx:key="id" data-id="{{item1._id}}" bindtap="navToTap">
          <view class="test_left"></view>
          <view class="test_right">
            <view class="test_title">{{item1.name}}</view>
            <view class="test_des">{{item1.name}}</view>
          </view>
        </view>
      </block>
      <!-- </navigator> -->
    </scroll-view>
  </view>
</view>
<!-- 心理咨询 -->
<view wx:else="{{!select}}">
  <!-- 两个预约part -->
  <view class="appointment">
    <view class="online" style="background: {{online?'#e9dbc6':''}}; border-radius:10rpx">
      <text bindtap="getYuyueData" data-index="{{true}}">线上预约</text>
    </view>
    <view class="offline" style="background: {{!online?'#e9dbc6':''}}; border-radius:10rpx">
      <text bindtap="getYuyueData" data-index="{{false}}">线下预约 </text>
    </view>
  </view>
  <view wx:if="{{(doctor.length) > 0}}">
    <view wx:for="{{doctor}}" wx:for-item="item">
      <view class="itme_xs">
        <view class="left_show">{{item.name}}
          {{item.time.getDate()}}</view>
      </view>
    </view>
  </view>
  <view wx:else>
    <van-empty description="暂无医生预约" />
  </view>
</view>