/**************************** 顶部标题容器 ****************************/
.topTips{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff8833;
  font-size: 50rpx;
  background-color: #ffffff;
  border-bottom: #efefef solid 5rpx;
  position: fixed;
  z-index: 2;
}
/**************************** 主题总容器 ****************************/
.mainBody{
  width: 100%;
  height: auto;
  background-color: #e6c096;
  position: absolute;
  top: 150rpx;
  z-index: 1;
}
/**************************** 单个题目设置 ****************************/
.singleTopic{
  width: 98%;
  height: 250rpx;
  margin-right: 1%;
  margin-left: 1%;
  margin-bottom: 8rpx;
  margin-top: 8rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  border: 2rpx #ff7733 solid;
  background-color: white;
}
.topicName{
  width: 94%;
  height: auto;
  font-size: larger;
}
/**************************** 单个选项设置 ****************************/
.radioGroup{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  flex-direction: row;
  justify-content: space-around;
  width: 94%;
}
.label{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  flex-direction: row;
  justify-content: center;
}
.radio{
  display: flex;
  flex-wrap: nowrap;
  flex-direction: row;
  transform:scale(0.8);
}
.radioContent{
  display: flex;
  flex-wrap: nowrap;
  flex-direction: row;
  font-size: 30rpx;
  color: #313131
}
/**************************** 提交按钮设置 ****************************/
.submit{
  margin-bottom: 16rpx;
  margin-top: 8rpx;
}
/**************************** 结果显示部分 ****************************/
.resultMainBody{
  width: 100%;
  height: auto;
  background-color: #ffffff;
  position: absolute;
  top: 150rpx;
  z-index: 1;
}


