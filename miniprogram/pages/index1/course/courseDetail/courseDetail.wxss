/* pages/index1/courseDetail/courseDetail.wxss */
.top{
  width: 100%;
  height: 360rpx;
}

.topImg{
  width:100%;
  height: 100%;
}

.description{
  width: 100%;
  text-align: center;
}
.description .title{
  font-weight: 550;
  margin-top: 35rpx;
  margin-bottom: 35rpx;
  letter-spacing:1rpx;
}
.description .des{
  padding-left:100rpx;
  padding-right:100rpx;
  text-align: left;
  color:#aaaaaa;
  font-size:28rpx;
  margin-bottom: 35rpx
}
.blank{
  width: 100%;
  height: 20rpx;
  background-color: #f7f7f7;
}

.center .introduce{
  width: 100%;
  display: flex;
  height: 100rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}
.center .introduce .side{
  flex:2;
}

.center .introduce .words{
  color:#555555;
  flex:2;
  text-align: center;
}

.center .detail{
  color:#888888;
  font-size:33rpx;
  letter-spacing: 3rpx;
  text-align: left;
  margin-left: 60rpx;
  margin-right: 60rpx;
  margin-bottom:150rpx;
}

.bottom {
  border-top: solid 1rpx #bbbbbb;
  position: fixed;
  left:0;
  bottom:0;
  width: 100%;
  height:110rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom .price {
  text-align: center;
  flex:1;
  color:var(--orange1);
}

.bottom .side {
  flex:3;
}

.bottom .test {
  color:#ffffff;
  background-color:var(--orange0);
  display: flex;
  align-items: center;
  justify-content: center;
  height:80rpx;
  margin-right: 15rpx;
  border-radius: 10rpx;
  flex:2;
  font-size:35rpx;
  letter-spacing: 2rpx;
}