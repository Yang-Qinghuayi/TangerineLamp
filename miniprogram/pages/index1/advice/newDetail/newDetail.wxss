/* miniprogram/pages/index1/advice/newDetail/newDetail.wxss */
.top {
  display: flex;
  align-items: center;
  height: 120rpx;
}

.top .targetImg{
  height: 75rpx;
  width: 75rpx;
  padding-left: 20rpx;
  padding-top: 10rpx;
}

.top .des{
  margin-left: 20rpx;
  color: var(--orange1);
}

.bottom {
  padding-top:10rpx;
  background-color:#f7f7f7;
  height: calc( 100vh - 120rpx );
}

.noneAppointment {
  text-align: center;
  padding-top: 400rpx;
  color:#b3b3b3;
}

.freeTime_item {
  background-color: #fff;
  display: flex;
  /* height: 222rpx; */
  padding:20rpx;
  padding-right:40rpx;
  border-bottom: 3rpx solid var(--orange0);
  border-radius: 10rpx;
  margin: 20rpx;
  align-items: center;
  height: 300rpx;
}

.picBlock {
  flex:1;
  height: 100%;
  display: block;
  text-align: center;
  align-items: center;
  display: flex;
  border-right: 1rpx #eee solid;
  margin-right: 20rpx;
  padding-right:20rpx;
}

.picBlock image{
  height: 200rpx;
  width: 200rpx;
  border-radius:100rpx;
}

.leftBlock {
  height: 100%;
  flex:3;
}

.advicebottom {
  margin-top: 20rpx;
}

.advicebutton {
  font-size: 30rpx;
  color:#ffffff;
  background-color: rgb(78, 211, 78);
  border-radius: 10rpx;
  padding:10rpx;
  margin-top: 10rpx;
  margin-right: -20rpx;
  height: 100%;
  width: 145rpx;
  float: right;
  text-align: center;
}
.detail_header {
  width: 100%;
}

.doctorName {
  font-family: '微软雅黑';
  font-weight: bold;
  display: inline-block;
}

.time {
  position: relative;
  right: -50rpx;
  float: right;
}

.level {
  margin-top: 15rpx;
  font-size:30rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space:normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.speciality {
  margin-top: 13rpx;
  font-size:30rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space:normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}